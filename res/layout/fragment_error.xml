<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <TextView
        android:id="@+id/textViewTitleFSC"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="Sorry there seems to be an error when trying to log on. Please contact the system administrator to help solve the problem. Thank you. "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewToYourAccount"
        android:layout_alignBottom="@+id/textViewToYourAccount"
        android:layout_toRightOf="@+id/textViewToYourAccount"
        android:autoLink="phone"
        android:text="555-555-5555"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textViewToYourAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewTitleFSC"
        android:layout_below="@+id/textViewTitleFSC"
        android:padding="20dp"
        android:text="Contact: "
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>