<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <TextView
        android:id="@+id/textViewTitleFSC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Farmingdale State College"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/imageViewQR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTitleFSC"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo" />

    <EditText
        android:id="@+id/EditTextForgotPasswordRamID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="ram id" />

    <EditText
        android:id="@+id/EditTextForgotPasswordEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/EditTextForgotPasswordRamID"
        android:layout_alignLeft="@+id/EditTextForgotPasswordRamID"
        android:ems="10"
        android:hint="email" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/ButtonForgotPasswordSubmit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EditTextForgotPasswordRamID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:text="Submit" />

</RelativeLayout>